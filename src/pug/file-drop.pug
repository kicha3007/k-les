// --------------------- it-file -------------------------
section.it-file
	.it-container
		.it-file__wrap
			.it-file__half.it-file__half--left
				.it-file__img-box
					img.it-file__img(src='img/file/1.jpg', alt='')
			.it-file__half.it-file__half--right
				.it-file__half-inner
					.it-callback-title.it-file__title
						| У вас есть фото кухни, которую вы хотите?
					.it-callback__subtitle.it-file__subtitle
						| Отправьте его нам, и мы рассчитаем
						| стоимость, предложим варианты,
						br
						| как
						|                                 сделать лучше
					form#review_form.it-callback-callback__form.it-form--hide(enctype='multipart/form-data', novalidate='novalidate', method='post')
						input(name='section', type='hidden', value='review_section')
						.it-callback__input-wrap.it-file__input-wrap
							.it-callback__half.it-file__callback-half
								input.it-callback__input.valid(type='text', name='name', maxlength='200', value='', placeholder='Ваше имя', aria-required='true', aria-invalid='false')
							.it-callback__half.it-file__callback-half
								input.it-callback__input.valid(type='tel', name='phone', value='', placeholder='Ваш телефон', data-phone='true', autocomplete='off', maxlength='18', aria-required='true', aria-invalid='false', data-mask='phone')
							.it-checkbox-wrap.it-file__checkbox-wrap
								label.it-checkbox
									input.it-checkbox__default(type='checkbox', name='AGREE', checked='', required='')
									span.it-checkbox__pseudo
									span.it-checkbox__text 	Подтверждаю свое согласие на обработку персональных данных
							.it-callback__half.it-file__callback-half
								label.it-callback__file-label
									input#add_file.it-callback__file(accept='image/jpeg,image/png,image/gif', name='file', type='file', required='')
									span.it-callback__file-title.it-btn.it-btn--transparent Прикрепить файл
									.file-field__button-name
							.it-callback__half.it-callback__buttons.it-file__callback-half
								button.it-btn.it-callback__btn(type='submit') Отправить заявку
						.it-form__success
							| Спасибо!
							br
							|  Ваша заявка принята.
